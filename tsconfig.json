{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "baseUrl": ".",
  "module": "commonjs",
  "paths": {
    "@/components/*": [
      "src/components/*"
    ],
    "@/hooks/*": [
      "src/hooks/*"
    ],
    "@/context/*": [
      "src/context/*"
    ],
    "@/config/*": [
      "src/config/*"
    ],
    "@/styles/*": [
      "src/styles/*"
    ]
  },
}